@{
    ViewData["Title"] = "Home Page";
}
      <!-- scroll button -->
      <button class="scroll"><i class="fa-solid fa-arrow-up"></i></button>
      <!-- scroll button -->


      <!-- start landing -->
      <div class="landing">
        <div class="d-flex flex-column-reverse flex-lg-row gap-3 align-items-center justify-content-evenly ">
          <div class="landing-text d-flex flex-column gap-5 align-items-lg-start">
            <div class="information d-flex flex-column align-items-center d-lg-block">
                <span class="d-block">Welcome To Goal A</span>
                <p>Sports Wear & Tools Online Store</p>
                <span class="d-block">At <span>GOAL </span>, we believe that an active lifestyle deserves nothing but the best in sportswear. Whether you're a dedicated athlete, a fitness enthusiast, or someone simply embracing the joy of movement, we're here to outfit you in gear that elevates your performance and style.</span>
            </div>
            <div class="social">
              <ul class="d-flex gap-4 align-items-center justify-content-center p-0">
                <li class="d-flex align-items-center justify-content-center facebook"><a href="#"><i class="fa-brands fa-facebook-f"></i></a></li>
                <li class="d-flex align-items-center justify-content-center twitter"><a href="#"><i class="fa-brands fa-x-twitter"></i></a></li>
                <li class="d-flex align-items-center justify-content-center instagram"><a href="#"><i class="fa-brands fa-instagram"></i></a></li>
                <li class="d-flex align-items-center justify-content-center youtube"><a href="#"><i class="fa-brands fa-youtube"></i></a></li>
              </ul>
            </div>
          </div>
          <div class="landing-image">
            <img src="img/landing.jpg" alt="landing-photo">
          </div>
        </div>
      </div>
      <!-- End Landing -->
      <!-- Start Features -->
      <div class="features">
        <div class="container">
          <div class="row row-gap-2">
                <div class="feat p-3 d-flex align-items-center justify-content-center gap-3 col-sm-6 col-md-6 col-lg-3">
                  <i class="fa-solid fa-shirt" style="color: var(--orange);"></i>
                  <h4>High Quality</h4>
                </div>
                <div class="feat p-3 d-flex align-items-center justify-content-center gap-3 col-sm-6 col-md-6 col-lg-3">
                  <i class="fa-solid fa-truck-fast" style="color: #e1aa74;"></i>
                  <h4>Fast Delivery</h4>
                </div>
                <div class="feat p-3 d-flex align-items-center justify-content-center gap-3 col-sm-6 col-md-6 col-lg-3">
                  <i class="fa-solid fa-money-check-dollar" style="color: #689f38;"></i>
                  <h4>Competitive Price</h4>
                </div>
                <div class="feat p-3 d-flex align-items-center justify-content-center gap-3 col-sm-6 col-md-6 col-lg-3">
                  <i class="fa-solid fa-star" style="color: #ffd700;"></i>
                  <h4>Special Editions</h4>
                </div>
          </div>
        </div>
      </div>
      <!-- End Features -->
      <!-- Start Categories -->
      <div class="categories pb-5">
        <div class="container">
          <div class="heading pb-2 text-center text-lg-start">
            <h2>Categories</h2>
          </div>
            <div class="categories-content pt-5 flex-column p-5">
              <div class="category clothing">
                <div class="category-info text-light d-flex flex-column align-items-center p-3">
                  <h4 class="fs-5 fw-normal align-self-start pt-2 pb-3">Clothing</h4>
                  <p class="fs-3 fw-bold pb-3">Find Your Favourite Club T-shirt</p>
                  <a href="#" class="btn main-btn fw-bold py-1 p-x-2 rounded-pill d-block">Shop By Category</a>
                </div>
                <div class="category-img">
                  <img src="img/shirt.png" class="img-fluid" alt="clothing-photo">
                </div> 
              </div>
              <div class="category shoes d-flex flex-column col-12 flex-lg-row justify-content-between align-items-center gap-5">
                <div class="category-info text-light d-flex flex-column align-items-start p-3">
                  <h4 class="fs-5 fw-normal align-self-start pt-2 pb-3">Shoes</h4>
                  <p class="fs-3 fw-bold pb-3">Best Shoes For Men & Women</p>
                  <a href="#" class="btn main-btn fw-bold py-1 p-x-2 rounded-pill d-block">Shop By Category</a>
                </div>
                <div class="category-img">
                  <img src="img/shoes.png" alt="shoes-photo" class="img-fluid">
                </div>
              </div>
              <div class="category accessories d-flex flex-column flex-lg-row justify-content-between align-items-center gap-3">
                <div class="category-info text-light d-flex flex-column align-items-start p-3">
                  <h4 class="fs-5 fw-normal align-self-start pt-2 pb-3">Accessories</h4>
                  <p class="fs-3 fw-bold pb-3">A New Collection Of Accessories For You</p>
                  <a href="#" class="btn main-btn fw-bold py-1 p-x-2 rounded-pill d-block">Shop By Category</a>
                </div>
                <div class="category-img">
                  <img src="img/accessor-2.png" alt="accessories" class="img-fluid">
                </div>
              </div>
              <div class="category bags">
                <div class="category-info text-light d-flex flex-column align-items-center p-3">
                  <h4 class="fs-5 fw-normal align-self-start pt-2 pb-3">Bags</h4>
                  <p class="fs-3 fw-bold pb-3">Best Bag Quality & Different Shapes</p>
                  <a href="#" class="btn main-btn fw-bold py-1 p-x-2 rounded-pill d-block">Shop By Category</a>
                </div>
                <div class="category-img">
                  <img src="img/bag-3.png" class="img-fluid" alt="bag-photo">
                </div>
              </div>
          </div>
        </div>
      </div>
      <!-- End Categories -->
      <!-- start special -->
      <div class="special pb-5">
